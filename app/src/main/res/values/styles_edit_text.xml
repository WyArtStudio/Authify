<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthifyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_4dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_4dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_4dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_4dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="hintEnabled">false</item>
        <item name="helperTextTextColor">@color/colorError</item>
        <item name="elevation">@dimen/dimen_2dp</item>
        <item name="android:elevation">@dimen/dimen_2dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:background">@drawable/bg_edit_text_layout</item>
    </style>

    <style name="AuthifyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_text_input_color</item>
        <item name="hintTextAppearance">@style/AuthifyText.Regular.12</item>
    </style>
</resources>